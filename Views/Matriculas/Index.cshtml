@model IEnumerable<Systema_Registro_Matricula.Models.Matricula>

@{
    ViewBag.Title = "Index";
}

<h2>Matriculas</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre Alumno
        </th>
        <th>
            Nombre Curso
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Alumno.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Curso.Nombre_Curso)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id_Matricula }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id_Matricula }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id_Matricula })
        </td>
    </tr>
}

</table>
